{
  "plugins": ["jest", "@typescript-eslint"],
  "extends": ["plugin:github/recommended", "plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "rules": {
    "no-unused-vars": "off",
    "camelcase": "off",
    "object-shorthand": "off"
  },
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  }
}
